<%= form_tag products_path, method: :get do %>
  <div class="row">
    <div class="col-sm-12 col-md-5">
      <div class="input-group">
        <%= text_field_tag :search, params[:search], :class => "form-control"%>
        <span class="input-group-btn">
          <%= button_tag "Search", :class => "btn btn-default", name: nil %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<div class="products-body">
      <% @products.in_groups_of(3) do |group| %>
        <div class="row">
          <% group.compact.each do |product| %>
            <div class="col-md-4">
              <%= link_to image_tag(product.picture_url, :width => 300), product if product.picture.present? %>
              <h4><%= link_to product.name, product %></h4>
              <%= product.description %>
            </div>
          <% end %>
        </div>
      <% end %>
</div>